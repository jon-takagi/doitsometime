<!DOCTYPE html>
<html>
<head>
  <title>Google Auth Example App</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <h3> Do it sometime </h3>
    <div id="user" >
      <% if current_user %>
      Welcome, <%= current_user.name %>
      <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
      <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
      <% end %>
    </div>
  </div>
  <% if current_user %>
  <div id="sidebar">
    <div class = "plus-minus-buttons">
      <h1> <%= link_to "Projects", projects_path%> </h1>
      <button onclick="toggleDeleteButtons()"> - </button>
      <button> <%= link_to "+", new_project_path %> </button>
    </div>
    <ul id="projects" data-deleteisshown='false'>
    <% for project in @projects %>
    <li id = "project_<%=project.id %>" > <%= project.name %> <%= link_to ">", project %></li>
    <% end %>
  </ul>
  <p id="notice"><%= notice %></p>
  </div>
  <div id="content">
    <%= yield %>
  </div>
  <% end %>
</body>
</html>
